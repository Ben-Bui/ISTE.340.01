@model BuiP3.Models.EmploymentModel
@{
    ViewData["Title"] = Model.pageTitle;
}

<h1>@Model.introduction.title</h1>
<div>Academic excellence equals career performance</div>

<div id="allEmployment" style="display:none">
    <!--About stuff-->
    <div class="intro-content">
        @foreach (var item in Model.introduction.content)
        {
            <div class="content-block">
                <h3>@item.title</h3>
                <p>@item.description</p>
            </div>
        }
    </div>
    <div id="empTabs">
        <ul>
            <li><a href="#stats">Statistics</a></li>
            <li><a href="#employers">Top Employers</a></li>
            <li><a href="#coop">Co-op Employment</a></li>
            <li><a href="#professional">Professional Employment</a></li>
        </ul>

        <!-- Stat -->
        <div id="stats">
            <h2>@Model.degreeStatistics.title</h2>
                @foreach (var stat in Model.degreeStatistics.statistics)
                {
                    <div class="stat-item">
                        <h3 style="font-size: small">@stat.value</h3>
                        <h3 style="font-size: small">@stat.description</h3>
                    </div>
                }
        </div>

        <!-- Employer -->
        <div id="employers">
            <h2>@Model.employers.title</h2>
                @foreach (var employer in Model.employers.employerNames)
                {
                    <div class="employer-item">
                        <h3 style="font-size: small">@employer</h3>
                    </div>
                }
        </div>

        <!-- COOp  -->
        <div id="coop">
            <h2>@Model.coopTable.title</h2>
            <table id="coopTable" class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>Employer</th>
                        <th>Degree</th>
                        <th>City</th>
                        <th>Term</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var coop in Model.coopTable.coopInformation)
                    {
                        <tr>
                            <td>@coop.employer</td>
                            <td>@coop.degree</td>
                            <td>@coop.city</td>
                            <td>@coop.term</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Professional  -->
        <div id="professional">
            <h2>@Model.employmentTable.title</h2>
            <table id="professionalTable" class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>Employer</th>
                        <th>Degree</th>
                        <th>City</th>
                        <th>Title</th>
                        <th>Start Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.employmentTable.professionalEmploymentInformation)
                    {
                        <tr>
                            <td>@job.employer</td>
                            <td>@job.degree</td>
                            <td>@job.city</td>
                            <td>@job.title</td>
                            <td>@job.startDate</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!--Map-->
            <div class="map-container mt-5">
                <h2>Employment Locations Map</h2>
                <div class="map-frame">
                    <iframe src="@Model.MapUrl" width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <div class="map-note">
                    <small>This map shows locations where our students have worked or are currently employed.</small>
                </div>
            </div>
        </div>
    </div>
</div>